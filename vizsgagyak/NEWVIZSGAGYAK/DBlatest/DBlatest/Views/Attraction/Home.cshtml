@model List<Attractions>
@{
    ViewData["Title"] = "Home Page";
}
<h2>Adding</h2>
<p> Add a new City!!!</p>

<table border="3">
    <tr>
        <th>Name</th>
        <th>City</th>
        <th>Price</th>
        <th>Longitude</th>
        <th>Lattitude</th>
        <th>Category</th>
        <th>Duration</th>
        <th>Recommended age</th>
    </tr>
    <tbody>
        @foreach (var attraction in Model)
        {
            <tr>
                <td>@attraction.AttrName </td>
                <td>@attraction.City </td>
                <td>@attraction.Price </td>
                <td>@attraction.Longitude </td>
                <td>@attraction.Lattitude </td>
                <td>@attraction.Category </td>
                <td>@attraction.Duration </td>
                <td>@attraction.RecommendedAge </td>
            </tr>
        }
    </tbody>
</table>
<br />
<form action="/add" method="post">
    Name:<input type="text" name="AttrName" required /> <br />
    City:<input type="text" name="city" required /> <br />
    Price:<input type="number" name="price" required /> <br />
    Longitude:<input type="number" name="Longitude" required /> <br />
    Lattitude:<input type="number" name="Lattitude" required /> <br />
    Category:<input type="text" name="Category" required /> <br />
    Duration:<input type="number" name="Duration" required /> <br />
    Recommended age:<input type="number" name="RecommendedAge" required /><br /> <br />
    <button type="submit">Elkuldes</button>
</form>
</table>

